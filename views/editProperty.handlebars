      </div> }}
      <div class="mb-3">
        <label class="form-label" for="type">Property Type</label>
        <input
          type="text"
          class="form-control"
          id="type"
          name="type"
          placeholder="hotel, villa, resort etc..."
          value="{{property.type}}"
        />

      </div>

      <div class="mb-3">
        <label class="form-label" for="details">Description</label>
        <textarea
          type="text"
          class="form-control"
          id="details"
          name="details"
        >{{property.details}}</textarea>

      </div>

      <div class="mb-3">
        <button type="submit" class="btn btn-success">Edit Listing</button>
      </div>

    </form>
    <a href="/properties">All Products</a>

  </div>
</div>