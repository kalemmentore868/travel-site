<!-- Hero -->

<div
  class="p-5 text-center bg-image rounded-3 h-100"
  style="
    background-image: url('https://mdbcdn.b-cdn.net/img/new/slides/041.webp');
    height: 400px;
    background-size: cover;
  "
>
  <div class="mask" style="background-color: rgba(0, 0, 0, 0.6);">
    <div class="d-flex justify-content-center align-items-center h-100">
      <div class="text-white">
        <h1 class="mb-3">Get more to travel more</h1>
        <h4 class="mb-3">Sight see tours members can get double rewards. Sign up
          for free and start getting points on top of airline miles.
        </h4>
        <a
          class="btn btn-outline-light btn-lg"
          href="/properties"
          role="button"
        >See all Listings</a>
      </div>
    </div>
  </div>
</div>
<!-- Hero -->
<section id="property-type-section" class="container">
  <h2 class="my-5 text-center">Browse Most in Demand Properties</h2>

  <div
    id="carouselExampleControls"
    class="carousel slide carousel-fade z-depth-1-half"
    data-ride="carousel"
  >

    <div class="carousel-inner">
      {{#each properties}}
        <div class="carousel-item {{isFirst this.id}}">
          <img
            class="d-block w-100 caro-img"
            src={{this.image_url}}
            alt="First slide"
          />
        </div>
      {{/each}}
    </div>
    <a
      class="carousel-control-prev"
      href="#carouselExampleControls"
      role="button"
      data-slide="prev"
    >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a
      class="carousel-control-next"
      href="#carouselExampleControls"
      role="button"
      data-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>

  </div>
</section>
<section id="browse-type-section" class="container my-3">
  <h2 class="my-2 text-center">Browse by property type</h2>
  <div class="row justify-content-center">
    {{#each properties}}
      <div class="card col-sm card-box pt-5" style="width: 18rem;">
        <img
          class="card-img-top card-box-img img-responsive"
          src={{this.image_url}}
          alt="Card image cap"
        />
        <div class="card-body">
          <h5 class="card-title py-4">{{this.type}}</h5>
          <a href="#" class="btn btn-primary">Visit</a>
        </div>
      </div>
    {{/each}}
  </div>

</section>

<section class="container my-4">
  <h2 class="my-2 text-center">Browse by property Location</h2>
  <div class="locations mx-auto">
    {{#each properties}}
      <div class="w-100">
        <div class="card">
          <div
            class="card-body card-body-custom py-4"
            style="
    background-image: url('{{this.image_url}}');
   
    background-size: cover;
  "
          >
            <div class="bg-light d-inline-block p-3">
              <h5 class="card-title">{{this.title}}</h5>
              <p class="card-text">{{this.details}}</p>
            </div>

            <a href="#" class="btn btn-primary">Visit</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</section>